{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'card',
    'scene_element',
    'scene_element--fadeinup'
  ]
%}
  <article{{ attributes.addClass(classes) }}>
    <a href="{{ url }}" class="card__link">
      <div class="card__image">
        {{ content.field_image }}
      </div>
      <div class="card__icon">
        <svg class="icon icon--large"><use xlink:href="/themes/teka_mmda/dist/svg/symbol/svg/sprite.symbol.svg#cross"></svg>
      </div>
    </a>
    <div class="card__content">
      {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes.addClass('card__title') }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {{ title_suffix }}
      <div class="card__description">
        {{ content.field_cases_services }}
      </div>
    </div>
  </article>
